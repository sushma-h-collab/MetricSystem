<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MetricSystem</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MetricSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">MetricSystem</a>

                <!-- Toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                    aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Right-side icon + badge (visible on mobile even when menu is collapsed) -->
                <div class="d-flex align-items-center ms-auto d-md-none">
                    <a class="nav-link d-flex align-items-center" href="#">
                        <i class="fa-solid fa-cart-shopping me-1"></i>
                        <span>Calculations</span>
                        <span class="badge bg-primary ms-2">2</span>
                    </a>
                </div>

                <!-- Collapsible content -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Left menus -->
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Conversions" asp-action="Index">Fahrenheit</a>
                        </li>
                        <!-- Placeholders to match screenshot (can point to real pages later) -->
                        <li class="nav-item"><a class="nav-link text-dark" href="#">Inch</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="#">Pint</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" href="#">Yard</a></li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- Right-side icon + badge (desktop/tablet) -->
                    <div class="d-none d-md-flex align-items-center">
                        <a class="nav-link d-flex align-items-center" href="#">
                            <i class="fa-solid fa-cart-shopping me-1"></i>
                            <span>Calculations</span>
                            <span class="badge bg-primary ms-2">2</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MetricSystem -
            <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- FIXED: jQuery path (no /dist/ in cdnjs layout) -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <!-- Bootstrap bundle (includes Popper) -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Add validation scripts (per PDF) -->
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
